<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <EditText
        android:id="@+id/et_past"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:focusable="false"
        android:gravity="end"
        android:singleLine="true"
        android:textSize="24sp"
        android:background="#FFF"/>

    <EditText
        android:id="@+id/et_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:cursorVisible="false"
        android:focusable="false"
        android:gravity="end"
        android:paddingTop="30dp"
        android:singleLine="true"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_clc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AC"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Del"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn3"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btn_sin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="sin"
                    android:textSize="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_cos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="cos"
                    android:textSize="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_tan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="tan"
                    android:textSize="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn3"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btn_sqrt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="√"
                    android:textSize="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_square"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="X^2"
                    android:textSize="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_cube"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="X^y"
                    android:textAllCaps="false"
                    android:textSize="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn3"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/btn_bracket"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="( )"
                    android:textSize="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_pi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="π"
                    android:textAllCaps="false"
                    android:textSize="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_e"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="e"
                    android:textAllCaps="false"
                    android:textSize="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn3"/>

            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn3"/>
                <Button
                    android:id="@+id/btn_div"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="/"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn2"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_sub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn2"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn3"/>

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="35dp"
                    android:background="@drawable/bg_btn2"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <Button
                    android:id="@+id/btn_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn2"
                    android:textSize="35dp"
                    android:text="." />

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn2"
                    android:textSize="35dp"
                    android:text="0" />

                <Button
                    android:id="@+id/btn_equal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn2"
                    android:textSize="35dp"
                    android:text="=" />

                <Button
                    android:id="@+id/btn_mul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn2"
                    android:textSize="35dp"
                    android:text="*" />

            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>